:javascript
  function refreshTweets() {
    $.get('/latest', {since: window.latestTweet}, function(data) {
      $('.tweets').prepend(data);
      $('.latest').slideDown('slow');
      $('.tweets li:gt(50)').remove();

      setTimeout(refreshTweets, 1000);
    });
  }
  $(function() {
    setTimeout(refreshTweets, 1000);
  });
  
%h1 Recent POWER Tweets
%ul.tweets
  = haml :tweets, :layout => false
